# --- Database (DBaaS) ---
DATABASE_URL=postgresql+psycopg2://cloudads:cloudads@db:5432/cloudads

# --- S3â€‘compatible Object Storage ---
S3_ENDPOINT_URL=http://minio:9000
S3_ACCESS_KEY=miniokey
S3_SECRET_KEY=miniosecret
S3_REGION=us-east-1
S3_BUCKET=cloudads
S3_PUBLIC_BASE=
# OPTIONAL: if you want presigned URLs
S3_PRESIGN_EXPIRY=3600

# --- RabbitMQ (CloudAMQP URL works here) ---
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/%2F
RABBITMQ_QUEUE=ads

# --- Imagga (Image Tagging) ---
IMAGGA_API_KEY=your_imagga_key
IMAGGA_API_SECRET=your_imagga_secret
IMAGGA_MIN_CONFIDENCE=50

# --- Mailgun (Email) ---
MAILGUN_DOMAIN=your.mailgun.domain
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_FROM=noreply@your.mailgun.domain
